<?xml version="1.0" encoding="UTF-8" ?> 
 
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.board.BoardMapper">



	<!-- Board List - all -->
	<resultMap type="com.study.board.BoardDTO" id="boardlist">
		<result property="weather_category" column="weather_category"/>
		<result property="title" column="title"/>
		<result property="create_date" column="create_date"/>
		<result property="view_cnt" column="view_cnt"/>
		<result property="like_cnt" column="like_cnt"/>
		<result property="board_no" column="board_no"/>
		
		<association property="udto" javaType="com.study.user.UserDTO">
			<result property="username" column="username"/>
			<result property="nation" column="nation"/>
		</association>
	</resultMap>
	
	
	
	<select id="list" resultType="com.study.board.BoardDTO">
		select *
		from Board
		order by create_date desc
		limit 0,7;
	</select>

	<select id="list2" resultType="com.study.board.BoardDTO">
		select *
		from Board
		order by recommend_cnt desc
		limit 0,7;
	</select>

	
	<select id="getAll" resultType="Map">
		select board_no from Board
		where board_no = #{board_no}
	</select>
	
	<select id="total" parameterType="Map" resultType="int">
		select count(*) from board
		<where>
			<choose>
				<when test="col=='username'">
					wname like concat('%', #{word}, '%')
				</when>
				<when test="col=='title'">
					title like concat('%', #{word}, '%')
				</when>
			</choose>
		</where>            
	</select>
	

</mapper>